# Picovoice Porcupine Access Key (get from https://console.picovoice.ai/)
PORCUPINE_ACCESS_KEY=your_porcupine_access_key_here

# Google Gemini API Key (get from https://aistudio.google.com/app/apikey)
GEMINI_API_KEY=your_gemini_api_key_here

# Google Calendar OAuth Credentials File Path
GOOGLE_CREDENTIALS_FILE=credentials.json

# Audio Settings
AUDIO_INPUT_DEVICE=default
AUDIO_OUTPUT_DEVICE=default

# Conversation Settings
CONVERSATION_TIMEOUT_SECONDS=30

# Assistant Settings
ASSISTANT_NAME=Computer
LANGUAGE=de-DE

# Smart Home / ioBroker Settings
IOBROKER_HOST=192.168.178.100
IOBROKER_PORT=8087
SMARTHOME_ENABLED=true

# Weather Settings (OpenWeatherMap - get free key from https://openweathermap.org/api)
OPENWEATHERMAP_API_KEY=your_openweathermap_api_key_here
WEATHER_DEFAULT_CITY=Berlin

# Web Search (Tavily - get free key from https://tavily.com, 1000 searches/month free)
TAVILY_API_KEY=your_tavily_api_key_here
